{
  "name": "@sgmonda/streamfu",
  "description": "Functional programming utilities for working with streams in JS/TS",
  "version": "0.1.8",
  "license": "MIT",
  "exports": "./mod.ts",
  "imports": {
    "streams": "jsr:@std/streams",
    "asserts": "jsr:@std/assert"
  },
  "tasks": {
    "check": "deno check **/*.ts",
    "test": "deno task check && deno test --allow-all --coverage && deno coverage",
    "lint": "deno fmt && deno lint"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } }
}
